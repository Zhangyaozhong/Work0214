<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_36"
        android:paddingLeft="@dimen/paddingLeft_24"
        android:paddingRight="@dimen/paddingLeft_24">

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/marginRight_20"
            android:src="@drawable/common_btn_menu" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tv_search"
            android:layout_toEndOf="@id/iv_more"
            android:background="@drawable/search_bround"
            android:hint="请输入要搜索的内容"
            android:paddingStart="@dimen/paddingLeft_10" />

        <TextView
            android:layout_marginStart="@dimen/marginLeft_10"
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="搜索" />
    </RelativeLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:paddingLeft="@dimen/paddingLeft_24"
        android:layout_marginTop="@dimen/marginTop_20"
        android:id="@+id/mXRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"></com.jcodecraeer.xrecyclerview.XRecyclerView>


</LinearLayout>